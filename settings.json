{
  // UI
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.fontSize": 15,
  "editor.wordWrap": "on",
  "editor.stickyScroll.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "editor.accessibilitySupport": "off",
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "mouseover",
  "editor.lineNumbers": "on",
  "editor.mouseWheelZoom": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "explorer.confirmDelete": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  "terminal.integrated.fontSize": 16,

  // Fonts
  "apc.font.family": "Geist Mono",
  "editor.fontFamily": "Geist Mono",
  "notebook.output.fontFamily": "Geist Mono",
  "scm.inputFontFamily": "Geist Mono",
  "chat.editor.fontFamily": "Geist Mono",
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font",
  "editor.fontLigatures": true,

  //Theme
  "window.titleBarStyle": "custom",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.colorCustomizations": {
    "[Gruvbox Dark Hard]": {
      "sideBar.background": "#212121",
      "sideBar.border": "#1d2021",
      "terminal.background": "#212121"
    }
  }

  // APC
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 28
  },
  "apc.statusBar": {
    "position": "editor-bottom",
    "alignment": "left",
    "size": 28,
    "height": 28
  },
  "apc.listRow": {
    "height": 22,
    "fontSize": 13
  },
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "trafficLightPosition": {
      "x": 10,
      "y": 12
    }
  },

  // Language formatter
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[postcss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Git
  "git.confirmSync": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "errorLens.alignMessage": {
    "start": 0,
    "end": 75,
    "minimumMargin": 0
  },
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],

  // Formatting
  "editor.formatOnSave": true,
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  // Formatting - EsLint
  "eslint.run": "onSave",
  "eslint.lintTask.enable": true,
  "eslint.validate": ["javascript", "typescript", "javascriptreact", "html", "typescriptreact", "vue", "css"],

  // Formatting - Prettier
  "prettier.jsxSingleQuote": true,
  "prettier.endOfLine": "auto",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 120,
  "prettier.semi": true,
  "prettier.bracketSpacing": true,
  "prettier.trailingComma": "all",
  "prettier.singleQuote": true,
  "prettier.vueIndentScriptAndStyle": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Discord Presence
  "discord.removeRemoteRepository": true,
  "prettier.configPath": ".prettierrc.js",
  "discord.lowerDetailsEditing": "ðŸ“‚: {workspace}",
  "discord.detailsEditing": "ðŸ“„: {file_name}",
  "discord.removeDetails": true,

  // Prisma
  "prisma.showPrismaDataPlatformNotification": false,

  // Spelling dictionary
  "cSpell.userWords": [
    "axios",
    "clsx",
    "hookform",
    "lucide",
    "NEXTAUTH",
    "scroller",
    "sonner",
    "tailwindcss",
    "UPLOADTHING"
  ],

  // Misc
  "editor.linkedEditing": true,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.layoutControl.enabled": false,

  // Extensions
  "extensions.autoCheckUpdates": true,
  "extensions.ignoreRecommendations": false,
  "extensions.autoUpdate": true,
  "github.copilot.editor.enableAutoCompletions": true,
  "debug.disassemblyView.showSourceCode": false,
  "gitlens.views.commitDetails.files.layout": "tree",
}
